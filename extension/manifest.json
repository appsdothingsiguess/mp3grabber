{
    "manifest_version": 3,
    "name": "MP3 Sniper",
    "version": "0.2",
    "permissions": ["scripting", "activeTab"],
    "commands": {
      "grab-mp3": {
        "suggested_key": { "default": "Ctrl+Shift+M" },
        "description": "Send all audio links (.mp3, .m4a, .wav, .flac, .ogg, .webm) to LAN relay"
      }
    },
    "background": { "service_worker": "bg.js" }
  }
  