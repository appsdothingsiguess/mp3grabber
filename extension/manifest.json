{
    "manifest_version": 3,
    "name": "MP3 Sniper",
    "version": "0.3",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://youtube.com/*",
      "https://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end",
        "all_frames": false,
        "match_about_blank": false
      }
    ],
    "commands": {
      "grab-mp3": {
        "suggested_key": { "default": "Ctrl+Shift+M" },
        "description": "Send all audio links (.mp3, .m4a, .wav, .flac, .ogg, .webm) to LAN relay"
      }
    },
    "background": { "service_worker": "bg.js" }
  }
  