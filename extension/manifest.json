{
    "manifest_version": 3,
    "name": "MP3 Sniper",
    "version": "0.4",
    "permissions": ["webRequest", "cookies", "storage", "tabs", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "MP3 Sniper"
    },
    "commands": {
      "grab-mp3": {
        "suggested_key": { "default": "Ctrl+Shift+M" },
        "description": "Trigger stream detection and capture"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "background": { "service_worker": "bg.js" }
  }
  